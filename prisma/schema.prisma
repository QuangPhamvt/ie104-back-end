generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  Buyer
  Seller
}

enum STATUS_CARTS {
  Waiting
  Ordered
  Completed
}

enum STATUS_PAYMENTS {
  Processing
  Completed
}

model users {
  id       String     @id @default(uuid())
  avatar   String?
  email    String     @unique
  username String
  role     Role       @default(Buyer)
  password String     @db.VarChar(255)
  carts    carts[]
  orders   orders[]
  products products[]
  banks    banks?
}

model banks {
  id           String @id @default(uuid())
  author       users  @relation(fields: [author_id], references: [id])
  author_id    String @unique
  acqId        String
  account_name String
  account_no   String
}

model categories {
  id          String     @id @default(uuid())
  slug        String     @unique
  name        String
  description String     @db.Text
  create_at   DateTime   @default(now())
  update_at   DateTime   @updatedAt
  products    products[]
}

model products {
  id            String        @id @default(uuid())
  title         String        @unique
  description   String        @db.Text
  picture       String?
  price         Decimal       @db.Decimal(10, 5)
  discount      Decimal       @db.Decimal(10, 5)
  categories_id String
  cart_items    cart_items[]
  order_items   order_items[]
  category      categories    @relation(fields: [categories_id], references: [id])
  author        users?        @relation(fields: [author_id], references: [id])
  author_id     String?
}

model carts {
  id         String       @id @default(uuid())
  author_id  String
  status     STATUS_CARTS @default(Waiting)
  create_at  DateTime     @default(now())
  update_at  DateTime     @updatedAt
  cart_items cart_items[]
  author     users        @relation(fields: [author_id], references: [id])
}

model cart_items {
  cart_id    String
  product_id String
  price      Decimal  @db.Decimal(10, 5)
  quanlity   Int      @db.MediumInt
  creat_at   DateTime @default(now())
  cart       carts    @relation(fields: [cart_id], references: [id])
  product    products @relation(fields: [product_id], references: [id])

  @@unique([cart_id, product_id])
}

model payments {
  id        String          @id @default(uuid())
  amount    Decimal         @db.Decimal(10, 5)
  status    STATUS_PAYMENTS @default(Processing)
  create_at DateTime        @default(now())
  orders    orders[]
}

model orders {
  id          String        @id @default(uuid())
  user_id     String
  payment_id  String
  create_at   DateTime      @default(now())
  order_items order_items[]
  user        users         @relation(fields: [user_id], references: [id])
  payment     payments      @relation(fields: [payment_id], references: [id])
}

model order_items {
  id         String   @id @default(uuid())
  order_id   String
  product_id String
  price      Decimal  @db.Decimal(10, 5)
  quantity   Int      @db.MediumInt
  create_at  DateTime @default(now())
  product    products @relation(fields: [product_id], references: [id])
  order      orders   @relation(fields: [order_id], references: [id])
}
